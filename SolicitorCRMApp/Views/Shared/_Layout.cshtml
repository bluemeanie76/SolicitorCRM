@using System.Security.Claims
@using SolicitorCRMApp.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRM</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="site-header">
        <div class="logo-area">
            <img src="~/images/logo-placeholder.svg" alt="CRM" />
            <span>CRM</span>
        </div>
        <nav class="nav">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <!--a asp-controller="Home" asp-action="Index">Home</a-->
                <a asp-controller="Tasks" asp-action="Index">Home</a>
                @if (User.HasClaim("UserType", UserTypeNames.Administrator)
                     || User.HasClaim("UserType", UserTypeNames.SuperAdministrator))
                {
                    <a asp-controller="Admin" asp-action="Index">Users</a>
                    <a asp-controller="Tasks" asp-action="Create">Add Task</a>
                }
                @if (User.HasClaim("UserType", UserTypeNames.SuperAdministrator))
                {
                    <a asp-controller="Pools" asp-action="Index">Pools</a>
                }
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="link-button">Logout</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Login</a>
            }
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>
</body>
</html>
